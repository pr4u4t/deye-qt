{
  "name": "Deye Data Collector",
  "version": "1.0.0",
  "slug": "voltron_deye",
  "description": "Collects data from Deye inverters via serial Modbus and exposes it via REST API.",
  "url": "https://github.com/pr4u4t/deye-qt",
  "startup": "application",
  "boot": "auto",
  "arch": ["armv7", "armhf", "aarch64", "amd64", "i386"],
  "options": {
    "device": "/dev/ttyUSB0",
    "baud": 9600,
    "parity": "none",
    "dataBits": 8,
    "stopBits": 1,
    "responseTime": 1000,
    "numberOfRetries": 3,
    "http_port": 8080
  },
  "schema": {
    "device": "str",
    "baud": "int",
    "parity": "str",
    "dataBits": "int",
    "stopBits": "int",
    "responseTime": "int",
    "numberOfRetries": "int",
    "http_port": "int"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "privileged": ["SYS_RAWIO", "SYS_ADMIN"],
  "devices": ["/dev/ttyUSB0:/dev/ttyUSB0:rwm"],
  "map": ["config"],
  "webui": "http://[HOST]:[PORT:8080]",
  "ingress": true,
  "image": "ghcr.io/pr4u4t/deye-data-collector:1.0.0"
}

