{
  "name": "Deye Data Collector",
  "version": "1.0.0",
  "slug": "deye_data_collector",
  "description": "A Home Assistant add-on for collecting data from Deye inverters via serial Modbus and exposing it via REST API.",
  "startup": "application",
  "boot": "auto",
  "arch": ["armv7", "armhf", "aarch64", "amd64", "i386"],
  "options": {
    "device": "/dev/ttyUSB0",
    "baud": 9600,
    "parity": "none",
    "dataBits": 8,
    "stopBits": 1,
    "responseTime": 1000,
    "numberOfRetries": 3,
    "http_port": 8080
  },
  "schema": {
    "device": "str",
    "baud": "int",
    "parity": "str",
    "dataBits": "int",
    "stopBits": "int",
    "responseTime": "int",
    "numberOfRetries": "int",
    "http_port": "int"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "privileged": ["SYS_RAWIO", "SYS_ADMIN"],
  "devices": ["/dev/ttyUSB0:/dev/ttyUSB0:rwm"],
  "map": ["config"],
  "webui": "http://[HOST]:[PORT:8080]",
  "ingress": true,
  "ingress_port": 8080
}
